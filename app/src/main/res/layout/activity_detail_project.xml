<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="127dp">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:transitionName="image" />

        <TextView
            android:id="@+id/name_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Разработка" />

        <TextView
            android:id="@+id/data_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Описание" />

        <TextView
            android:id="@+id/det_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Автор" />

        <TextView
            android:id="@+id/dat_author"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/dat_github_repo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGit"
            android:text="GitHub репозиторий"
            android:textColor="#21a91a"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/det_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Контакты" />

        <TextView
            android:id="@+id/data_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickEmail"
            android:text="TextView"
            android:textColor="#24a2cb"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/dat_git_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickGitAc"
            android:text="GitHub страница"
            android:textColor="#24a2cb"
            android:textSize="15dp" />


    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_add_black_24dp" />


</android.support.design.widget.CoordinatorLayout>