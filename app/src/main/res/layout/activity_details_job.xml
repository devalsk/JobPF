<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivityJob">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="29dp">

        <TextView
            android:id="@+id/t_name_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Программист 1С"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/t_zp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50000-100000"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/t_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Барнаул Ленина 46 оф 2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/t_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вектор" />

        <TextView
            android:id="@+id/t_treb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Требование"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t_treb_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="data" />

        <TextView
            android:id="@+id/t_opisan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t_treb_data2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="data" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Контактная Информация"
                android:textColor="@android:color/black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Иван" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2dp"
                    app:srcCompat="@drawable/ic_menu_send" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+79609663784"
                    android:textAllCaps="true"
                    android:textColor="#24a2cb" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>